# MII OntoServer Authentication Configuration
# Copy this file to .env and fill in your actual values

# Path to directory containing certificate (no trailing slash)
# Example (Windows): C:/Users/username/.secrets
# Example (Linux/Mac): /home/username/.secrets
auth_path =

# Certificate filename (PKCS12 format, .p12 extension)
# Example: your_name_certificate.p12
auth_file =

# Certificate password
# Leave empty if no password, otherwise enter the password for the .p12 file
auth_pw =

# Path to LOINC-SNOMED mapping file (sct2_Identifier_Full format)
# Example: C:/Users/username/terminologies/SNOMED/sct2_Identifier_Full_INT_20240301.txt
loinc_snomed_mapping_path =

# Path to local LOINC CSV file (Loinc.csv from LOINC distribution)
# Used for fast local lookup of LOINC display names before falling back to API
# Example: C:/Users/username/terminologies/LOINC/LoincTable/Loinc.csv
loinc_csv_path =

# Path to SNOMED terminology directory (for interactive ECL builder)
# Should point to the Snapshot/Terminology directory containing sct2_* files
# Example: C:/Users/username/terminologies/SNOMED/SnomedCT_LOINCExtension_PRODUCTION_LO1010000_20250921T120000Z/Snapshot/Terminology
SNOMED_TERMINOLOGY_PATH =
